[Unit]
Description=GhostPi Auto-Update Service - Automatic Software Updates
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/ghostpi-auto-update.sh update
ExecStartPost=/usr/local/bin/ghostpi-auto-update.sh check-health
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

